@model IEnumerable<Model.AlunoModel>

@{
    ViewBag.Title = "Personal Fit - Aluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Alunos</h2>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayName("IMC")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Objetivo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Math.Round((double)item.Peso / (item.Altura * item.Altura), 2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Objetivo)
            </td>
            <td>
                @Html.ActionLink("Detalhes", "Details", new { user = item.Usuario.Login}) |
                @Html.ActionLink("Treinos", "Index", "Treino", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>
