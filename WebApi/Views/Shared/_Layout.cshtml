<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/layout.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Personal Fit</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("Professor") || User.IsInRole("Admin"))
                    {
                        <li><a href="#">Alunos</a></li>
                    }

                    @if (User.IsInRole("Aluno") || User.IsInRole("Admin"))
                    {
                        <li><a href="#">Exercícios</a></li>
                    }

                    @if (User.IsInRole("Professor"))
                    {
                        <li><a href="#">Perfil</a></li>
                    }

                    @if (User.IsInRole("Aluno"))
                    {
                        <li><a href="#">Perfil</a></li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li><a href="#">Perfil</a></li>
                        <li><a href="#">Administrar</a></li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a href="@Url.Action("Logout", "Usuario")">Logout</a></li>
                    }

                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="renderBody">
        @RenderBody()
    </div>
</body>
</html>
