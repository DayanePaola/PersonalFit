@model Model.TreinoModel

@{
    ViewBag.Title = "Personal Fit - Deletar treino";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deletar treino</h2>

<h3>Você tem certeza que deseja deletar o registro?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Aluno.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Aluno.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Situacao)
        </dt>

        <dd>
            @if (Model.Situacao == "A")
            {
                @Html.DisplayName("Ativo")
            }
            else
            {
                @Html.DisplayName("Inativo")
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-primary" /> |
            @Html.ActionLink("Ver todos", "Index")
        </div>
    }
</div>
